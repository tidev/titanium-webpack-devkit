{
  "name": "titanium-webpack-devkit",
  "version": "0.1.0",
  "description": "Development tools to bundle Titanium apps with Webpack",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "lerna-publish": "lerna publish --yes --conventional-commits",
    "lint": "eslint packages/*/src/",
    "postinstall": "lerna bootstrap",
    "test": "npm run lint"
  },
  "keywords": [
    "webpack",
    "titanium"
  ],
  "author": "Axway Appcelerator",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/titanium-webpack-devkit.git"
  },
  "devDependencies": {
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-axway": "^4.2.2",
    "lerna": "^6.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
